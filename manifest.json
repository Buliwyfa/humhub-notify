{
  "name": "HumHub Notify",
    "version": "1.2",
    "manifest_version": 2,
    "description": "This extension is for notifying you of new notifications from HumHub.",
    "homepage_url": "https://humhub.org/",
    "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "96": "icons/icon96.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon96.png",
    "default_title": "HumHub Notify"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "notifications",
    "https://*/*community.humhub.com/notification/overview/*"
  ]
}
